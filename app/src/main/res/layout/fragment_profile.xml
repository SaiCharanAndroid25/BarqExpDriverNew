<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/stroke_color">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
           >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:elevation="10dp"
                    android:src="@drawable/profile"
                    app:civ_border_color="@color/dark_app_button_color"
                    app:civ_border_width="2dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/profile_pic"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/driver_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layoutDirection="locale"
                                android:text="Name"
                                android:textColor="@color/dark_app_button_color"
                                android:textDirection="locale" />

                            <TextView
                                android:id="@+id/no_of_trips_separator"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layoutDirection="locale"
                                android:text=":"
                                android:textColor="@color/dark_app_button_color"
                                android:textDirection="locale" />

                            <TextView
                                android:id="@+id/name_value"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layoutDirection="locale"
                                android:padding="5dp"
                                android:textColor="@color/black"
                                android:textDirection="locale"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/phone_nbr"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layoutDirection="locale"
                                android:text="Phone Number"
                                android:textColor="@color/dark_app_button_color"
                                android:textDirection="locale" />

                            <TextView
                                android:id="@+id/deposit_amt_separator"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layoutDirection="locale"
                                android:text=":"
                                android:textColor="@color/dark_app_button_color"
                                android:textDirection="locale" />

                            <TextView
                                android:id="@+id/phone_value"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layoutDirection="locale"
                                android:padding="5dp"
                                android:textColor="@color/black"
                                android:textDirection="locale"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/address"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layoutDirection="locale"
                                android:text="Address"
                                android:textColor="@color/dark_app_button_color"
                                android:textDirection="locale" />

                            <TextView
                                android:id="@+id/credit_amt_separator"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layoutDirection="locale"
                                android:text=":"
                                android:textColor="@color/dark_app_button_color"
                                android:textDirection="locale" />

                            <TextView
                                android:id="@+id/address_value"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layoutDirection="locale"
                                android:padding="5dp"
                                android:text="Hyderabad"
                                android:textColor="@color/black"
                                android:textDirection="locale"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</layout>
