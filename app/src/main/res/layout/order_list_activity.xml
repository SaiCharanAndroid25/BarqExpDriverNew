                android:layout_marginRight="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/mersat"
                android:textSize="11sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:id="@+id/view_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/cod_layout"
            android:layout_marginTop="5dp"
            android:background="@color/text_hint_color" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_layout"
        android:orientation="horizontal"
        android:weightSum="3">


        <Button
            android:id="@+id/pickup_btn"
            style="@style/dark_app_color_button_style_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/conf_pwd_input_layout"
