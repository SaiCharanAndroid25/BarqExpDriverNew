                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/mersat"
                android:textSize="11sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:id="@+id/view_separator_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/cod_layout"
            android:layout_marginTop="5dp"
            android:background="@color/text_hint_color" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/buttons_layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_layout"
        android:orientation="horizontal"
        android:weightSum="2">


        <Button
            android:id="@+id/pickup_btn_2"
            style="@style/dark_app_color_button_style_0"
