<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/parent_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="5dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_check_circle" />

            <ImageView
                android:id="@+id/profile_details_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:src="@drawable/addimage" />

            <View
                android:id="@+id/view_seperator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/profile_details_image"
                android:layout_marginBottom="5dp"
                android:background="@color/app_button_color" />

            <TextView
                android:id="@+id/profile_item_discription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_seperator"
                android:gravity="center"
                android:text="sjndjskfhjsf"
                android:textColor="@color/dark_app_button_color"
                android:textSize="12sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</layout>