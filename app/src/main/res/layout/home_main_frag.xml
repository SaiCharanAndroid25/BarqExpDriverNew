<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_300"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linear_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:orientation="horizontal">

        <co.ceryle.segmentedbutton.SegmentedButtonGroup
            android:id="@+id/segmentedButtonGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:elevation="2dp"
            app:sbg_animateSelector="linearOutSlowIn"
            app:sbg_animateSelectorDuration="100"
            app:sbg_backgroundColor="@color/white"
            app:sbg_backgroundDrawable="@drawable/gradient_drawable"
            app:sbg_dividerBackgroundDrawable="@drawable/gradient_drawable_divider"
            app:sbg_dividerColor="@color/blue_300"
            app:sbg_dividerSize="1dp"
            app:sbg_radius="2dp"
            app:sbg_ripple="true"
            app:sbg_rippleColor="@color/blue_300"
            app:sbg_selectorBackgroundDrawable="@drawable/gradient_drawable_selector"
            app:sbg_selectorColor="@color/colorPrimary"> <!--app:sbg_position="0"-->

            <co.ceryle.segmentedbutton.SegmentedButton
                android:id="@+id/segmentedButtonOne"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:sb_text="CheckOut"
                app:sb_textColor="@color/black"
                app:sb_textSize="@dimen/activity_vertical_margin" />

            <co.ceryle.segmentedbutton.SegmentedButton
                android:id="@+id/segmentedButtonTwo"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:sb_text="Order Delivery"
                app:sb_textColor="@color/black"
                app:sb_textSize="@dimen/activity_vertical_margin" />

            <co.ceryle.segmentedbutton.SegmentedButton
                android:id="@+id/segmentedButtonThree"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:sb_text="CashonDelivery"
                app:sb_textColor="@color/black"
                app:sb_textSize="@dimen/activity_vertical_margin" />

        </co.ceryle.segmentedbutton.SegmentedButtonGroup>

    </LinearLayout>

