<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_app_button_color</item>
        <item name="colorPrimaryDark">@color/dark_app_button_color</item>
        <item name="colorAccent">@color/dark_app_button_color</item>
    </style>

    <style name="signup_edittext_style" parent="android:Widget.Material.EditText">
        <item name="android:textAllCaps">false</item>
        <item name="android:textDirection">locale</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:textColor">@color/dark_app_button_color</item>
    </style>

    <style name="tv_text_direction" parent="AppTheme">
        <item name="android:textDirection">locale</item>
    </style>

    <style name="app_color_button_style" parent="@android:style/Widget.Material.Button">
        <item name="android:backgroundTint">@color/app_button_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">2sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="app_color_button_style12" parent="@android:style/Widget.Material.Button">
        <item name="android:backgroundTint">@color/app_button_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">10sp</item>
        <item name="android:elevation">2sp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="dark_app_color_button_style" parent="@android:style/Widget.Material.Button">
        <item name="android:backgroundTint">@color/dark_app_button_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:elevation">2sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="dark_app_color_button_style_0" parent="@android:style/Widget.Material.Button">
        <item name="android:backgroundTint">@color/driver_fee</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:elevation">1sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dark_app_color_button_style_11" parent="@android:style/Widget.Material.Button">
        <item name="android:backgroundTint">@color/cod_commns</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:elevation">1sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dark_app_color_button_style_1" parent="@android:style/Widget.Material.Button">
        <item name="android:backgroundTint">@color/list_green</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:elevation">1sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dark_app_color_button_style_2" parent="@android:style/Widget.Material.Button">
        <item name="android:backgroundTint">@color/tab_border</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:elevation">1sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dark_app_color_button_style_3" parent="@android:style/Widget.Material.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:elevation">1sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="register_progress_bar" parent="AppTheme">
        <item name="android:background">@color/text_hint_color</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">5dp</item>
    </style>

    <style name="scrollview_style" parent="AppTheme">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">false</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#00cc00</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#ffffff
        </item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#ffffff
        </item>
    </style>


    <style name="textinput_layout_style" parent="AppTheme">
        <item name="android:backgroundTint">@color/text_hint_color</item>
        <item name="android:layoutDirection">locale</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="editext_style" parent="AppTheme">
        <item name="android:backgroundTint">@color/text_hint_color</item>
        <item name="android:layoutDirection">locale</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textColor">@color/dark_app_button_color</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="login_textinput_layout_style" parent="AppTheme">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layoutDirection">locale</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/dark_app_button_color</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/dark_app_button_color</item>
    </style>

    <style name="login_textinput_layout_style_1" parent="AppTheme">
        <item name="android:backgroundTint">@color/dark_app_button_color</item>
        <item name="android:layoutDirection">locale</item>
        <item name="android:textColorHint">@color/dark_app_button_color</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/dark_app_button_color</item>
        <item name="colorControlNormal">@color/dark_app_button_color</item>
        <item name="colorControlActivated">@color/dark_app_button_color</item>
    </style>

    <style name="login_editext_style" parent="AppTheme">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layoutDirection">locale</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="login_editext_style_1" parent="AppTheme">
        <item name="android:backgroundTint">@color/dark_app_button_color</item>
        <item name="android:layoutDirection">locale</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textColor">@color/dark_app_button_color</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="app_color_dialog_button_style" parent="@android:style/Widget.Material.Button">
        <item name="android:backgroundTint">@color/app_button_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">2sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="dark_app_color_dialog_button_style" parent="@android:style/Widget.Material.Button">
        <item name="android:backgroundTint">@color/dark_app_button_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:elevation">2sp</item>
        <item name="android:textColor">@color/white</item>

    </style>
</resources>
